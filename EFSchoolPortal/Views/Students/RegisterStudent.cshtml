@using EFSchoolPortal.Models
@model EFSchoolPortal.Models.Student
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<h1 class="text-center">Here you can register to become a student!</h1>
<div class="form-gorup form-horizontal">
    @using (Html.BeginForm("RegisterStudent","Students", 1))
    {
        <div>
            <div class="form-gorup">
                @Html.Label("Fname", "First Name")
                @Html.TextBoxFor(x => x.Fname)
            </div>
            <div class="form-gorup">
                @Html.Label("Lname", "Last Name")
                @Html.TextBoxFor(x => x.Lname)
            </div>
            <div class="form-gorup">
                @Html.Label("Email")
                @Html.TextBoxFor(x => x.Email)
            </div>
            <div>
                <input type="submit" value="Register" />
            </div>
        </div>
    }
</div>